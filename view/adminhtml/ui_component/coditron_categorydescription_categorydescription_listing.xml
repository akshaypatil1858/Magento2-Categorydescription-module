<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">coditron_categorydescription_categorydescription_listing.coditron_categorydescription_categorydescription_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>coditron_categorydescription_categorydescription_columns</spinner>
		<deps>
			<dep>coditron_categorydescription_categorydescription_listing.coditron_categorydescription_categorydescription_listing_data_source</dep>
		</deps>
		<buttons>
			<button name="add">
				<url path="*/*/new"/>
				<class>primary</class>
				<label translate="true">Add Category Description</label>
			</button>
		</buttons>
	</settings>
	<dataSource name="coditron_categorydescription_categorydescription_listing_data_source" component="Magento_Ui/js/grid/provider">
		<settings>
			<storageConfig>
				<param name="indexField" xsi:type="string">categorydescription_id</param>
			</storageConfig>
			<updateUrl path="mui/index/render"/>
		</settings>
		<aclResource>Coditron_CategoryDescription::CategoryDescription</aclResource>
		<dataProvider name="coditron_categorydescription_categorydescription_listing_data_source" class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>categorydescription_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters"/>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="coditron_categorydescription_categorydescription_columns">
		<settings>
			<editorConfig>
				<param name="selectProvider" xsi:type="string">coditron_categorydescription_categorydescription_listing.coditron_categorydescription_categorydescription_listing.coditron_categorydescription_categorydescription_columns.ids</param>
				<param name="enabled" xsi:type="boolean">true</param>
				<param name="indexField" xsi:type="string">categorydescription_id</param>
				<param name="clientConfig" xsi:type="array">
					<item name="saveUrl" xsi:type="url" path="coditron_categorydescription/CategoryDescription/inlineEdit"/>
					<item name="validateBeforeSave" xsi:type="boolean">false</item>
				</param>
			</editorConfig>
			<childDefaults>
				<param name="fieldAction" xsi:type="array">
					<item name="provider" xsi:type="string">coditron_categorydescription_categorydescription_listing.coditron_categorydescription_categorydescription_listing.coditron_categorydescription_categorydescription_columns_editor</item>
					<item name="target" xsi:type="string">startEdit</item>
					<item name="params" xsi:type="array">
						<item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
						<item name="1" xsi:type="boolean">true</item>
					</item>
				</param>
			</childDefaults>
		</settings>
		<selectionsColumn name="ids">
			<settings>
				<indexField>categorydescription_id</indexField>
			</settings>
		</selectionsColumn>
		<column name="categorydescription_id">
			<settings>
				<filter>text</filter>
				<sorting>asc</sorting>
				<label translate="true">ID</label>
			</settings>
		</column>
		<column name="custom_id">
			<settings>
				<filter>text</filter>
				<label translate="true">Custom Id</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<actionsColumn name="actions" class="Coditron\CategoryDescription\Ui\Component\Listing\Column\CategoryDescriptionActions">
			<settings>
				<indexField>categorydescription_id</indexField>
				<resizeEnabled>false</resizeEnabled>
				<resizeDefaultWidth>107</resizeDefaultWidth>
			</settings>
		</actionsColumn>
		<column name="category_id">
			<settings>
				<filter>text</filter>
				<label translate="true">Category Id</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="category_name">
			<settings>
				<filter>text</filter>
				<label translate="true">Category Name</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="category_custom_product">
			<settings>
				<filter>text</filter>
				<label translate="true">Category Custom Product</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="category_description">
			<settings>
				<filter>text</filter>
				<label translate="true">Product Description</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
		<column name="category_image">
			<settings>
				<filter>text</filter>
				<label translate="true">Custom Product Image</label>
				<editor>
					<editorType>text</editorType>
					<validation>
						<rule name="required-entry" xsi:type="boolean">false</rule>
					</validation>
				</editor>
			</settings>
		</column>
	</columns>
</listing>
